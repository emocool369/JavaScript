function same(input){
    text = input + "";
    let sum = 0;
    let allSame = true;
          
    for(let i = 0; i < text.length - 1; i++){
        if (text[i] != text[i + 1]){
          allSame = false;
        }
        sum += parseInt(text[i]);
    }
    sum += parseInt(text[text.length -1]);

    if(allSame){
        console.log('true');
    } else {
        console.log('false');
    }
        
        console.log(sum);
    
}
same(2222222)
same(1234)